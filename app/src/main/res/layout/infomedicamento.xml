<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_im_nombreMedicamento"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_im_descripcion"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        android:scrollbars="vertical"/>

    <ImageView
        android:id="@+id/iv_im_imagenMedicamento"
        android:paddingHorizontal="15dp"
        android:contentDescription="imagen del medicamento"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>

    <TextView
        android:id="@+id/tv_im_periodico"
        android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/bt_im_eliminar"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginVertical="10dp"
        android:text="Eliminar"
        android:background="@drawable/boton_eliminar"
        android:layout_height="0dp"/>


</LinearLayout>