<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_om_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Añadir medicamento"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/ll_om_ll1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tv_om_titulo"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/tv_om_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Nombre:"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_om_nombre"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:hint="Nombre del medicamento"
            android:inputType="text"
            android:textSize="17sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_om_ll2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/ll_om_ll1"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/tv_om_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Descripción:"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_om_descripcion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:hint="Descripción del medicamento"
            android:inputType="text"
            android:textSize="17sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_om_ll3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/ll_om_ll2"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/tv_om_periodico"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="Periódico (24h):"
            android:textSize="18sp"
            android:layout_weight="1.2"/>

        <EditText
            android:id="@+id/et_om_periodico"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:scrollbars="vertical"
            android:textColor="@color/black"
            android:hint="ej. 9, 14, 20.30 (para 9am, 2pm y 8:30pm)"
            android:inputType="text"
            android:textSize="17sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_om_ll4"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/ll_om_ll3"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="15dp">

        <Button
            android:id="@+id/bt_om_cancelar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_red_dark"
            android:layout_marginHorizontal="15dp"
            android:text="Cancelar"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/bt_om_añadir"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="17sp"
            android:text="Añadir"
            android:textColor="@color/white"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:layout_marginHorizontal="15dp"
            android:layout_weight="1"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>



</RelativeLayout>