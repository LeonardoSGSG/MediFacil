<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_am_titulo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="AÃ±adir medicamento predefinido"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:layout_marginVertical="10dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_am_medicamentospredefinidos"
        tools:listitem="@layout/medicamentocard"
        android:layout_width="match_parent"
        android:paddingHorizontal="10dp"
        android:paddingBottom="10dp"
        android:layout_height="0dp"
        android:layout_weight="7"/>

    <Button
        android:id="@+id/bt_am_otromedicamento"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Otro medicamento"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="#FF5117"
        android:layout_gravity="center"
        android:layout_marginVertical="10dp"
        android:layout_weight="0.9"/>

</LinearLayout>